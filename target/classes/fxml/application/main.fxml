<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fx:controller="serwisPaczek.controller.application.MainController">
    <top>
        <ImageView fitHeight="252.0" fitWidth="820.0" pickOnBounds="true" BorderPane.alignment="CENTER">
            <image>
                <Image url="@../../images/BigBanner_Delivery.png"/>
            </image>
            <viewport>
                <Rectangle2D/>
            </viewport>
        </ImageView>
    </top>
    <left>
        <AnchorPane prefHeight="348.0" prefWidth="804.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnOpenLoginPanel" layoutX="53.0" layoutY="180.0" mnemonicParsing="false"
                        onAction="#openLoginPanel" prefHeight="120.0" prefWidth="185.0"
                        style="-fx-background-color: grey;" text="Zaloguj się" textFill="WHITE" wrapText="true">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <Button fx:id="btnOpenCourierCompaniesListPanel" layoutX="459.0" layoutY="48.0" mnemonicParsing="false"
                        onAction="#openCourierCompaniesListPanel" prefHeight="120.0" prefWidth="135.0"
                        style="-fx-background-color: green;" text="Cennik" textFill="WHITE">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <Button fx:id="btnOpenRegisterPanel" layoutX="255.0" layoutY="180.0" mnemonicParsing="false"
                        onAction="#openRegisterPanel" prefHeight="120.0" prefWidth="185.0"
                        style="-fx-background-color: darkblue;" text="Zarejestruj się" textFill="WHITE" wrapText="true">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <Button fx:id="btnOpenOrderCourierMainPanel" layoutX="612.0" layoutY="48.0" mnemonicParsing="false"
                        onAction="#openOrderCourierMainPanel" prefHeight="120.0" prefWidth="135.0"
                        style="-fx-background-color: red;" text="Zamów kuriera" textFill="WHITE">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <Button fx:id="btnOpenAboutPanel" layoutX="459.0" layoutY="180.0" mnemonicParsing="false"
                        onAction="#openAboutPanel" prefHeight="120.0" prefWidth="135.0"
                        style="-fx-background-color: orange;" text="O firmie" textFill="WHITE">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <Button fx:id="btnOpenCourierRankingPanel" layoutX="612.0" layoutY="180.0" mnemonicParsing="false"
                        onAction="#openCourierRankingPanel" prefHeight="120.0" prefWidth="135.0"
                        style="-fx-background-color: purple;" text="Ranking kurierów" textAlignment="CENTER"
                        textFill="WHITE" wrapText="true">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <Label layoutX="53.0" layoutY="48.0" prefHeight="120.0" prefWidth="387.0"
                       style="-fx-background-color: blue; -fx-alignment: center; -fx-border-radius: 3; -fx-background-radius: 3;"
                       text="Witaj w serwisie paczek! Skorzystaj z naszych usług. Szybko, tanio i wygodnie!"
                       textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font size="17.0"/>
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </Label>
            </children>
        </AnchorPane>
    </left>
</BorderPane>
