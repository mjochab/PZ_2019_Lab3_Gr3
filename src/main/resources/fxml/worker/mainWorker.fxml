                                        textAlignment="CENTER" textFill="WHITE" wrapText="true">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="OpenEditGiftPanelButton" layoutX="567.0" layoutY="165.0"
                                        mnemonicParsing="false" onAction="#OpenEditGiftPanel" prefHeight="120.0"
                                        prefWidth="135.0" style="-fx-background-color: purple;"
                                        text="Zarządzaj prezentami" textAlignment="CENTER" textFill="WHITE"
                                        wrapText="true">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Button>
                            </children>
                        </AnchorPane>
                    </left>
                </BorderPane>
            </children>
        </StackPane>
    </children>
</Pane>
