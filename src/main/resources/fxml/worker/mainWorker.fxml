                    <top>
                        <ImageView fitHeight="252.0" fitWidth="820.0" pickOnBounds="true" BorderPane.alignment="CENTER">
                            <image>
                                <Image url="@../../images/BigBanner_Delivery.png"/>
                            </image>
                        </ImageView>
                    </top>
                    <left>
                        <AnchorPane prefHeight="348.0" prefWidth="804.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button layoutX="258.0" layoutY="23.0" mnemonicParsing="false" prefHeight="120.0"
                                        prefWidth="285.0" style="-fx-background-color: Blue;" text="Witaj Pracowniku"
                                        textFill="WHITE" wrapText="true">
                                    <font>
                                        <Font size="17.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="OpenWorkerPanelButton" layoutX="258.0" layoutY="165.0"
                                        mnemonicParsing="false" onAction="#OpenWorkerPanel" prefHeight="120.0"
